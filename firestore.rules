rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Other collections (optional)
    match /{document=**} {
      allow read, write: if false; // block everything else
    }
  }
}
